.btn.btn-default#pdf
  = link_to "Download PDF", resume_path(@resume.id, format: :pdf)

%body#top.show
  #cv.instaFade
    .mainDetails
      #headshot.quickFade
        %img= link_to image_tag("robot.jpg", alt: "Robot")
      #name
        %h1.quickFade.delayTwo= @resume.first_name + " " + @resume.last_name
        %h2.quickFade.delayThree Robot Coder Ninja
      #contactDetails.quickFade.delayFour
        %ul
          %li
            e:
            %a{:href => @resume.email, :target => "_blank"}=@resume.email
          %li
            w:
            %a{:href => "http://www.theironyard.com"} RobotCoderNinja.com
          %li= "m: " + @resume.phone_1
          %li= @resume.address
          %li= @resume.city.to_s + ", " + @resume.state.to_s + @resume.postal_code.to_s
      .clear
    #mainArea.quickFade.delayFive
      %section
        %article
          .sectionTitle
            %h1 Personal Profile
          .sectionContent
            %p Instant Robot Coder Ninja! Just add Coffee.
        .clear
      %section
        .sectionTitle
          %h1 Work Experience
        .sectionContent
          -unless @resume.experiences.empty?
            -@resume.experiences.each do |exp|
              %article
                %h2= exp.company_name
                %p.subDetails= exp.position
                %p= exp.summary
              %article
        .clear
      -unless @resume.skills.empty?
        %section
          .sectionTitle
            %h1 Key Skills
          .sectionContent
            %ul.keySkills
            -@resume.skills.each do |skill|
              %li= skill.name
            %ul.keySkills
          .clear
        %section
          .sectionTitle
            %h1 Education
          .sectionContent
            -@resume.educations.each do |ed|
              %article
                %h2= ed.institution
                %p.subDetails= ed.area
                %p= ed.study_type
              %article

          .clear

  :javascript
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
  :javascript
    var pageTracker = _gat._getTracker("UA-3753241-1");
    pageTracker._initData();
    pageTracker._trackPageview();
