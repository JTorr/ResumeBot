.col-lg-3
.well.col-lg-12
  .well.col-lg-12
    -# #draggable.ui-widget-content
      -# %p Drag me around
    %h1= @resume.first_name + " " + @resume.last_name

  .well.col-lg-12
    %h2 Basic Profile Information
    %p= "-" * 60

    -# - form_for [@resume, @email] do |form|
    %h3 Email
    %p.label.text_label.edit= @resume.email
    %input{:style => "display: none;", :type => "text", :value => "Press enter after update"}

    %h3 Phone 1
    %p.label.text_label.edit= @resume.phone_1
    %input{:style => "display: none;", :type => "text", :value => "Press enter after update"}
    %br

    -if @resume.phone_2.empty?
      %button.btn.btn-default.edit Add Phone
    -else
      %h3 Phone 2
      %p.label.text_label.edit= @resume.phone_2
      %input{:style => "display: none;", :type => "text", :value => "Press enter after update"}
    %br

    -if @resume.phone_3.empty?
      %button.btn.btn-default.edit Add Phone
    -else
      %h3 Phone 3
      %p.label.text_label.edit= @resume.phone_3
      %input{:style => "display: none;", :type => "text", :value => "Press enter after update"}

    %h3 Address
    %p.label.text_label.edit= @resume.address
    %input{:style => "display: none;", :type => "text", :value => "Press enter after update"}
    %p.label.text_label.edit= @resume.city
    %input{:style => "display: none;", :type => "text", :value => "Press enter after update"}
    %p.label.text_label.edit= @resume.state
    %input{:style => "display: none;", :type => "text", :value => "Press enter after update"}
    %p.label.text_label.edit= @resume.postal_code
    %input{:style => "display: none;", :type => "text", :value => "Press enter after update"}
    %br

    %button.btn.btn-default.submit Update Profile



  .well.col-lg-12
    %h2 Skills
    %p= "-" * 60
    -unless @resume.skills.empty?
      %table
        %tbody
          -@resume.skills.each do |skill|
            %tr
              %td= skill.name
            %tr
              %td
                = form_tag skills_path(skill), method: :delete do
                  = hidden_field_tag :id, skill.id
                  = button_tag(type: 'submit', class: "btn btn-danger") do
                    %i.fa.fa-times
              %tr
